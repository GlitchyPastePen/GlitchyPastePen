
<head>
  <title><%= username %></title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Raleway&display=swap');

    
    body {
      --fore: black;
      --back: white;
      background-color: var(--back);
      color: black;
      font-family: "Inter", "Helvetica", "Arial", sans-serif;
      margin: 0px;
    }
    
    h1 {
      margin-left: 20px;
      margin-top: 30px;
    }

    #user-header {
      border-bottom: 1px solid black;
      left: 0px;
      margin: 0px;
    }
    
    #main {
      margin-left: 25px;
    }
    
    .project {
      padding-top: 10px;
      padding-left: 20px;
      padding-bottom: 10px;
      width: 100%;
      font-family: "Raleway", sans-serif;
      transition: 1s ease;
      background-color: #85FFBD;
      background-image: linear-gradient(45deg, #85FFBD 0%, #FFFB7D 100%);
      border-radius: 9px;
      margin-top: 20px;
      display: block;
      width: 80%;
      font-size: 25px;
    }
    
    .project:hover {
      -webkit-transform: scale(1.01);
      -ms-transform: scale(1.01);
      transform: scale(1.01);
      transition: 1s ease;
    }
    
    img {
      cursor: pointer;
    }
  </style>
</head>
<body>  
  <header id='user-header'>
    <h1>
      <%= username %>
    </h1>
  </header><br />
  <div id = "main">
    <i>YOUR PROJECTS</i><br /><br />
    <% for (var project of projects) { %>
      <div class = "project">
        <%= project.key  %>&nbsp;&nbsp;
        <img src="https://cdn.glitch.com/622554c6-3118-4838-8819-e003b9525f5d%2F9755946431556282330.svg?v=1587891245518">
      </div>
    <% } %>
  </div>
  <br /><br />
<!--   <script src = "/user.js"></script> -->
</body>